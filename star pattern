#1.
#*
#* *
#* * *
#* * * *
#* * * * *
#--------------------------------------------------------------------------------
n=int(input("ENTER THE NUMBER OF LINES:-"))
for i in range(0,n):
    print("* "*(i+1),end=' ')
    print()
#--------------------------------------------------------------------------------
#2.
#* * * * *
#* * * *
#* * *
#* *
#*
#--------------------------------------------------------------------------------
n=int(input("ENTER THE NUMBER OF LINES:-"))
for i in range(n,0,-1):
    print("* "*i,end=' ')
    print()
#--------------------------------------------------------------------------------
#3.
#    *
#   * *
#  * * *
# * * * *
#* * * * *
#---------------------------------------------------------------------------------
n=int(input("ENTER THE NUMBER OF LINES:-"))
for i in range(0,n):
    print(" "*(n-i)+"* "*(i+1),end='')
    print()
#---------------------------------------------------------------------------------
#4.
#**********
#****  ****
#***    ***
#**      **
#*        *
#---------------------------------------------------------------------------------
n=int(input("ENTER THE NUMBER OF LINE:-"))
for i in range(n):
    print("*"*(n-i)+' '*(2*i)+"*"*(n-i),end='')
    print()
#---------------------------------------------------------------------------------
#PRINT STAR PATTERN USING TWO LOOPS
n=int(input("ENTER THE NUMBER OF ROWS:-"))
i=1
while(i<=n):
    j=1
    while(j<=i):
        print("*",end=' ')
        j+=1
    print()
    i+=1
#---------------------------------------------------------------------------------
#PRINT STAR PATTERN USING ONLY ONE LOOP
n=int(input("ENTER THE NUMBER OF ROWS:-"))
i=1
while(i<=n):
    print("* "*i)
    i+=1
